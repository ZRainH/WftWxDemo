<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dp">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_wechat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="微信"
                    android:textSize="11dp" />

                <RadioButton
                    android:id="@+id/rb_ali"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="支付宝"
                    android:textSize="11dp" />

                <RadioButton
                    android:id="@+id/rb_union"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="银联"
                    android:textSize="11dp" />

                <RadioButton
                    android:id="@+id/rb_tb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="通宝"
                    android:textSize="11dp" />

                <RadioButton
                    android:id="@+id/rb_tbj"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="通宝+"
                    android:textSize="11dp" />

                <RadioButton
                    android:id="@+id/rb_yu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="余额"
                    android:textSize="11dp" />

                <RadioButton
                    android:id="@+id/rb_no"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="无"
                    android:textSize="11dp" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="品牌ID"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:entries="@array/spingarr" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="店铺ID"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_orderdesc"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/et_orderdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="商品描述" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ordername"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/et_ordername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订单名称" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ordernum"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/et_ordernum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="订单号(最少11位)" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_orderAmount"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/et_orderamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="订单金额" />

            </android.support.design.widget.TextInputLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:onClick="pay"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:text="跳转收银台" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>